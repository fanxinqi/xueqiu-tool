{
  "manifest_version": 3,
  "name": "雪球数据爬虫工具",
  "version": "1.0",
  "description": "自动监控并爬取雪球页面数据的Chrome插件",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "webRequest"
  ],
  "host_permissions": [
    "*://*.xueqiu.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "雪球爬虫工具"
  },
  "content_scripts": [
    {
      "matches": ["*://*.xueqiu.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
